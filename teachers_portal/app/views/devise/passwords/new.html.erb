<div class="devise-page">
<div class="forgot-password-container">
  <!-- Logo -->
  <div class="forgot-password-logo">
    <h1>tailwebs.</h1>
  </div>

  <!-- Flash Messages -->
  <% if flash[:alert] %>
    <div class="flash-message alert">
      <%= flash[:alert] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="flash-message notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Forgot Password Form -->
  <div class="forgot-password-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class: "form-control" %>
      </div>

      <%= f.submit "Send Reset Instructions", class: "btn btn-reset" %>
    <% end %>

    <!-- Link to Login Page -->
    <p class="login-prompt">Remembered your password? <%= link_to "Log In", new_session_path(resource_name), class: "login-link" %></p>
  </div>
</div>
</div>