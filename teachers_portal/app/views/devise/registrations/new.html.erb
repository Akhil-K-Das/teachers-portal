<div class="devise-page">
  <div class="signup-container">
    <!-- Logo -->
    <div class="signup-logo">
      <h1>tailwebs.</h1>
    </div>

    <!-- Flash Messages -->
    <% if flash[:alert] %>
      <div class="flash-message alert">
        <%= flash[:alert] %>
      </div>
    <% elsif flash[:notice] %>
      <div class="flash-message notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- Sign Up Form -->
    <div class="signup-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :username, "Username" %>
          <%= f.text_field :username, autofocus: true, placeholder: "Enter Username", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, placeholder: "Enter Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control" %>
        </div>

        <%= f.submit "Sign Up", class: "btn btn-signup" %>
      <% end %>

      <!-- Link to Login Page -->
      <p class="login-prompt">Already have an account? <%= link_to "Log In", new_session_path(resource_name), class: "login-link" %></p>
    </div>
  </div>
</div>