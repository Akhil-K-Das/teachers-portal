<div class="devise-page">
<div class="login-container">
  <!-- Logo -->
  <div class="login-logo">
    <h1>tailwebs.</h1>
  </div>

  <!-- Flash Message for Errors (such as Invalid Username or Password) -->
  <% if flash[:alert] %>
    <div class="flash-message alert">
      <%= flash[:alert] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="flash-message notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Login form -->
  <div class="login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :username, "Username" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Enter Username", class: "form-control" %>
      </div>

      <div class="form-group" style="position: relative;">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Password", class: "form-control" %>
        <!-- Optional: Eye icon for password visibility -->
        <span class="toggle-password">
          <i class="fas fa-eye"></i>
        </span>
      </div>

      <!-- Forgot Password Link -->
      <% if devise_mapping.recoverable? %>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-password" %>
      <% end %>

      <%= f.submit "Login", class: "btn btn-login" %>
    <% end %>

    <!-- Sign Up Link -->
    <% if devise_mapping.registerable? %>
      <p class="sign-up-prompt">Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name), class: "sign-up-link" %></p>
    <% end %>
  </div>
</div>
</div>
